//#define startTypeLenght 2
#define commandTypeLenght 2
#define interfaceTypeLenght 3
#define sensorTypeLenght 3
#define sensorIDLenght
#define dataLenght 2
//define stopTypeLenght 2

#define START_BYTE '$'
#define STOP_BYTE '#'


//Command Type
typedef enum typeofCommand{
	 Readdata,
	 Replydata,
	 Command,
	 Write

};



//Command Type
typedef enum packet_type{
	 packet_type_read,
	 packet_type_reply,
	 packet_type_command,
	 packet_type_write
};


//structure from frame for packet data (Response)
typedef struct packetFormat{
	unsigned char start;
	unsigned char commandType;
	unsigned char interface;
	unsigned char sensorType;
	unsigned char sensorID[sensorIDLenght];
	unsigned char destnIPAddress;
	unsigned char srcIPAddress;
	//unsigned char originAddress;
	int data[dataLenght];
	unsigned char stop;
}packet;


// Packet Location
typedef enum PDA{
	start_loc,
	cmdtype_loc,
	interface_loc,
	sensorTyoe_loc,
	sensorID_loc,
	destIPAddress_loc,
	srcIPAddress_loc,
	data_loc,
	stop_loc
}packetLocation;


